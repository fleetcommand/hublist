    )
  );
} // end function hublist_node_info()

/**
 * Implements hook_access().
 */
function hublist_access($op, $node, $account) {
  switch ($op) {
    case 'view':
      return user_access('access content', $account);
      break;
    case 'create':
      return user_access('create hub', $account);
      break;
    case 'update':
      if ((user_access('edit any hub', $account)) || (user_access('edit own hubs', $account) && ($account->uid == $node->uid))) {
        return TRUE;
      }
      else {
        return FALSE;
      }
      break;
    case 'delete':
      if ((user_access('delete any hub', $account)) || (user_access('delete own hubs', $account) && ($account->uid == $node->uid) && ($node->hub_status != 2))) {
        return TRUE;
      }
      else {
        return FALSE;
      }
      break;
  } // end switch
} // end function hublist_access()

/**
 * Implements hook_load().
 */
function hublist_load($node) {
  $owndata = db_fetch_object(db_query('SELECT hub_protocol, hub_address, hub_url, hub_description, hub_important, pinger_nick, pinger_password, pinger_share, pinger_slots, hub_website, hub_owneremail, hub_status, hub_status_comment, stat_offline_count, stat_pingdate, stat_hubsoftware, stat_usercount, stat_userlimit, stat_shared_formatted, stat_minshare_formatted, stat_minslots, stat_maxhubs, stat_reliability FROM {hublist} WHERE vid = %d', $node->vid));
  return $owndata;
} // end function hublist_load()

/**
 * Implements hook_view().
 */
function hublist_view($node, $teaser = FALSE, $page = FALSE) {
  $node = node_prepare($node, $teaser);

  // Hub status
  $hub_status_string = t('Unknown');
  switch ($node->hub_status) {
    case -1:
      $hub_status_string = t('Waiting for hublist pinger');
      break;
    case 0:
      $hub_status_string = t('Online');
      break;
    case 1:
      $hub_status_string = t('Offline');
      break;
    case 2:
      $hub_status_string = t('Banned');
      break;
    case 3:
      $hub_status_string = t('Inactive');
      break;
    case 4:
      $hub_status_string = t('Duplicate');
      break;
  }

  // Basic hub info
  $node->content['basic'] = array(
    '#type' => 'fieldset',
    '#title' => t('Basic info'),
    '#weight' => -3,
  );

  $node->content['basic']['address'] = array(
    '#type' => 'markup',
    '#value' => '<div><strong>' . t('Hub address') . '</strong>: <a href="' . check_plain($node->hub_url) . '">' . check_plain($node->hub_url) . '</a></div>',
  );

  $node->content['basic']['description'] = array(
    '#type' => 'markup',
    '#value' => '<div><strong>' . t('Description') . '</strong>: ' . check_plain($node->hub_description) . '</div>',
  );

  $node->content['basic']['reliability'] = array(
    '#type' => 'markup',
    '#value' => '<div><strong>' . t('Successful ping rate') . '</strong>: ' . check_plain($node->stat_reliability) . '</div>',
  );

  if ($node->stat_hubsoftware != '')
    $node->content['basic']['hubsoftware'] = array(
      '#type' => 'markup',
      '#value' => '<div><strong>' . t('Hub software') . '</strong>: ' . check_plain($node->stat_hubsoftware) . '</div>',
    );

  if ($node->hub_important != '')
    $node->content['basic']['notes'] = array(
      '#type' => 'markup',
      '#value' => '<div><strong>' . t('Notes') . '</strong>: ' . check_markup($node->hub_important) . '</div>',
    );

  // Contact details
  if ($node->hub_website . $node->hub_owneremail != '') {
    $node->content['contact'] = array(
      '#type' => 'fieldset',
      '#title' => t('Contact'),
      '#weight' => -2,
    );

    if ($node->hub_website != '')
      $node->content['contact']['website'] = array(
        '#type' => 'markup',
        '#value' => '<div><strong>' . t('Website') . ':</strong> ' . l($node->hub_website, $node->hub_website) . '</div>',
      );

    if ($node->hub_owneremail != '')
      $node->content['contact']['email'] = array(
        '#type' => 'markup',
        '#value' => '<div><strong>' . t('E-mail') . ':</strong> ' . check_plain($node->hub_owneremail) . '</div>',
      );
  } // end if

  // Statistics
  if ($node->hub_status == 0) {
    $node->content['stat'] = array(
      '#type' => 'fieldset',
      '#title' => t('Current statistics'),
      '#weight' => -1,
    );

    $node->content['stat']['usercount'] = array(
      '#type' => 'markup',
      '#value' => '<div><strong>' . t('Usercount') . ':</strong> ' . check_plain($node->stat_usercount) . '</div>',
    );

    $node->content['stat']['minshare'] = array(
      '#type' => 'markup',
      '#value' => '<div><strong>' . t('Minimum share') . ':</strong> ' . check_plain($node->stat_minshare_formatted) . '</div>',
    );

    $node->content['stat']['userlimit'] = array(
      '#type' => 'markup',
      '#value' => '<div><strong>' . t('User limit') . ':</strong> ' . check_plain($node->stat_userlimit) . '</div>',
    );

    $node->content['stat']['shared'] = array(
      '#type' => 'markup',
      '#value' => '<div><strong>' . t('Total share') . ':</strong> ' . check_plain($node->stat_shared_formatted) . '</div>',
    );

    $node->content['stat']['minslots'] = array(
      '#type' => 'markup',
      '#value' => '<div><strong>' . t('Minimum slots') . ':</strong> ' . check_plain($node->stat_minslots) . '</div>',
    );

    $node->content['stat']['maxhubs'] = array(
      '#type' => 'markup',
      '#value' => '<div><strong>' . t('Maximum hubs') . ':</strong> ' . check_plain($node->stat_maxhubs) . '</div>',
    );
  } // end if

  // Hub status
  $node->content['status'] = array(
    '#type' => 'fieldset',
    '#title' => t('Status'),
    '#weight' => 0,
  );

  $node->content['status']['hubstatus'] = array(
    '#type' => 'markup',
    '#value' => '<div><strong>' . t('Hub status') . ':</strong> ' . $hub_status_string . '</div>',
  );

  if ($node->hub_status_comment != '')
    $node->content['status']['note'] = array(
      '#type' => 'markup',
      '#value' => '<div><strong>' . t('Additional information') . ':</strong> ' . check_plain($node->hub_status_comment) . '</div>',
    );

  if ($node->hub_status != -1) // Only show ping attempt is not Waiting for hublist pinger
    $node->content['status']['pingattempt'] = array(
      '#type' => 'markup',
      '#value' => '<div><strong>' . t('Latest ping attempt') . ':</strong> ' . $node->stat_pingdate . '</div>',
    );

  return $node;
}

