function _hublist_include($module, $file) {
  $result = FALSE;

  $file = './' . drupal_get_path('module', $module) . '/' . $file;

  if (file_exists($file) && is_file($file)) {
    require_once($file);

    $result = TRUE;
  }

  return $result;
}

/**
 * Adds a http:// prefix for all URL if not beginning with a protocol selector.
 *
 * @param $url
 *   A string containing the original URL.
 *
 * @return
 *   A string with an added http:// prefix is no protocol selector was included,
 *   otherwise the original string.
 */
// This function a
function _hublist_fix_url($url) {
  if (drupal_strlen($url) > 0) {
    if (preg_match('/^[a-z]+:\/\//', $url) == 0)
      $url = 'http://' . $url;
  }
  return $url;
}